# Template file for 'composer'
pkgname=composer
version=2.1.3
revision=1
build_style=fetch
depends="php"
short_desc="Dependency manager for PHP"
maintainer="Felipe Nogueira <contato.fnog@gmail.com>"
license="MIT"
homepage="https://getcomposer.org/"
distfiles="https://github.com/composer/composer/releases/download/${version}/composer.phar
 https://raw.githubusercontent.com/composer/composer/${version}/LICENSE"
checksum="f8a72e98dec8da736d8dac66761ca0a8fbde913753e9a43f34112367f5174d11
 7855ac293067aebe7e51afdd23b9dea54b8be24187dbecc9b9142581c37f596c"

do_install() {
	vbin composer.phar composer
	vlicense LICENSE

	vmkdir /etc/php/conf.d
	printf 'extension=%s\n' phar iconv openssl zip \
		>${DESTDIR}/etc/php/conf.d/composer.ini
}
